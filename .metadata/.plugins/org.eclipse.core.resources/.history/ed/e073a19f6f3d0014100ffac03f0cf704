package ex1;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[][] matrixA;
        matrixA = new int[3][2];
        matrixA[0][0] = 10;
        matrixA[0][1] = 10;
        matrixA[1][0] = 20;
        matrixA[1][1] = 10;
        matrixA[2][0] = 20;
        matrixA[2][1] = 15;
        Main m = new Main();
        m.minRaz(matrixA);
	}
	
	public int minRaz(int a[][]) {
        int x = a.length;
        int min = 0;
        int j = 0;
        int[] b = new int[2];
        for (int i = 0; i < x; i++) {
            if (a[i][0] < a[i][1]) {
                if ((a[i][1] - a[i][0]) != 0) {                    
                    b[j] = a[i][1] - a[i][0];
                    j++;
                }
            } else {
                if ((a[i][0] - a[i][1]) != 0) {                   
                    b[j] = a[i][0] - a[i][1];
                    j++;
                }

            }
        }
        min = b[0];
        for (int n = 0; n < b.length; n++) {
            if (min > b[n]) {
                min = b[n];
            }
        }
        System.out.println("Минимальная разница: " + min);
        return min;
    }

}
